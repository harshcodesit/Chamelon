<% layout("/layouts/boilerplate") %>

<body>
    <form method="get" action="/listings/new">
        <!-- <button> Create New Listing </button> -->
    </form>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (list of allisting){%>
            <a href="/listings/<%= list._id %>">
                <div class="card col listing-card" style="width: 20rem;">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="list_image" style="height: 20rem";>
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= list.title %></b>
                        <br>
                        &#8377 <%= list.price.toLocaleString("en-IN") %>  
                    </p>
                    </div>
                </div>
            </a>
              <%}%>
    </div>
    
</body>
