<% layout("/layouts/boilerplate") %>
<body>
   <div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create A New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <div>
                <label for="title" class="form-label">TITLE</label>
                <input name="listing[title]" class="form-control" required>
            </div>
            <div>
                <label for="description" class="form-label"> description</label>
                <textarea name="listing[description]" class="form-control"></textarea>
            </div>
            <!-- <div>
                <label for="image" class="form-label">Image URL</label>
                <input name="listing[image]" class="form-control"  >
            </div> -->
            <div>
                <label for="image" class="form-label">Upload a image</label>
                <input name="listing[image]" class="form-control" type="file" required >
            </div>
            <div class="row">
            <div class="col-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" class="form-control" type="number" required>
            </div>
            <div class="col-8">
                <label for="location" class="form-label">location</label>
                <input name="listing[location]" class="form-control" required>
            </div>
            </div>
           <div>
                <label for="location" class="form-label">country</label>
                <input name="listing[country]" class="form-control" required>
           </div>
         <br>
            <button class="btn btn-dark">Add</button>
        </form>
    </div>
   </div>
</body>
